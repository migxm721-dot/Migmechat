# MySQL Optimized Configuration for Migmechat
# Place this file at: docker/mysql-conf/my.cnf

[mysqld]

# ─── Character Set ───────────────────────────────────────────────────────────
character-set-server       = utf8mb4
collation-server           = utf8mb4_unicode_ci
init-connect               = 'SET NAMES utf8mb4'

# ─── Connection Settings ──────────────────────────────────────────────────────
max_connections            = 500
max_connect_errors         = 10000
connect_timeout            = 10
wait_timeout               = 28800
interactive_timeout        = 28800

# ─── InnoDB Settings ──────────────────────────────────────────────────────────
innodb_buffer_pool_size    = 2G
innodb_log_file_size       = 256M
innodb_log_buffer_size     = 64M
innodb_flush_log_at_trx_commit = 1
innodb_flush_method        = O_DIRECT
innodb_file_per_table      = ON
innodb_read_io_threads     = 4
innodb_write_io_threads    = 4

# ─── Query Cache ──────────────────────────────────────────────────────────────
# NOTE: Query cache is deprecated in MySQL 5.7.20 and removed in MySQL 8.0.
# These settings apply only to MySQL 5.7.x. Remove them if upgrading to 8.0.
query_cache_type           = 1
query_cache_size           = 64M
query_cache_limit          = 2M

# ─── Logging ──────────────────────────────────────────────────────────────────
slow_query_log             = ON
slow_query_log_file        = /var/log/mysql/slow.log
long_query_time            = 2
log_queries_not_using_indexes = ON
log_error                  = /var/log/mysql/error.log
general_log                = OFF

# ─── Binary Logging (for backup/replication) ──────────────────────────────────
server-id                  = 1
log_bin                    = /var/log/mysql/mysql-bin.log
binlog_format              = ROW
expire_logs_days           = 7
max_binlog_size            = 100M

# ─── Performance Schema ───────────────────────────────────────────────────────
performance_schema         = ON

# ─── Misc ─────────────────────────────────────────────────────────────────────
skip-name-resolve
max_allowed_packet         = 64M
tmp_table_size             = 64M
max_heap_table_size        = 64M
open_files_limit           = 65535
table_open_cache           = 2000
thread_cache_size          = 50

[mysql]
default-character-set      = utf8mb4

[client]
default-character-set      = utf8mb4
