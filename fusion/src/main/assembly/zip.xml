<assembly> 
  <id>uber-zip</id> 
  <formats> 
    <format>zip</format> 
  </formats> 
  <includeBaseDirectory>true</includeBaseDirectory> 
  <fileSets> 
    <fileSet> 
      <directory>./src/main/idl</directory> 
      <outputDirectory>./</outputDirectory> 
      <includes> 
        <include>Fusion.ice</include> 
      </includes> 
    </fileSet> 
    <fileSet> 
      <directory>./</directory> 
      <outputDirectory>./</outputDirectory> 
      <includes> 
        <include>log4j.properties</include> 
        <include>jndi.properties</include> 
      </includes> 
    </fileSet> 
    <fileSet> 
      <directory>./etc</directory> 
      <outputDirectory>etc/</outputDirectory> 
      <includes> 
        <include>database.properties</include> 
        <include>queries.properties</include> 
      </includes> 
    </fileSet> 
    <fileSet> 
      <directory>src/main/resources/eliza</directory> 
      <outputDirectory>eliza</outputDirectory> 
      <includes> 
        <include>*</include> 
      </includes> 
    </fileSet> 
    <fileSet> 
      <directory>src/main/resources/themes</directory> 
      <outputDirectory>themes</outputDirectory> 
      <includes> 
        <include>*</include> 
      </includes> 
    </fileSet> 
    <fileSet> 
      <directory>src/main/resources/im</directory> 
      <outputDirectory>im</outputDirectory> 
      <includes> 
        <include>**/*</include> 
      </includes> 
    </fileSet>
    <fileSet> 
      <directory>src/main/resources/im_resources</directory> 
      <outputDirectory>.</outputDirectory> 
      <includes> 
        <include>*</include> 
      </includes> 
    </fileSet> 
    <fileSet> 
      <directory>./src/main/resources/legacy</directory> 
      <outputDirectory>./</outputDirectory> 
      <includes> 
        <include>epollpatch.zip</include> 
      </includes> 
    </fileSet> 
  </fileSets>
	<dependencySets>

		<dependencySet>
      <excludes>
        <exclude>*:activation:*</exclude>
        <exclude>*:commons-logging:*</exclude>
        <exclude>*:jbossall-client:*</exclude>
        <exclude>*:mail:*</exclude>
        <exclude>*:smack:*</exclude>
        <exclude>*:smackx:*</exclude>
        <exclude>*:aspectjrt:*</exclude>
        <exclude>*:javax.servlet:*</exclude>
        <exclude>*:simmetrics_jar:*</exclude> 
        <exclude>*:Ice:*</exclude>
        <exclude>*:java_memcached-release:*</exclude>
        <exclude>*:slf4j-api:*</exclude>
        <exclude>*:slf4j-simple:*</exclude>
        <exclude>*:jcl-over-slf4j:*</exclude>
      </excludes>
			<outputDirectory>.</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
			<useTransitiveDependencies>true</useTransitiveDependencies>
		</dependencySet>	

    <dependencySet>
            <includes>
              <include>*:activation:*</include>
              <include>*:commons-logging:*</include>
              <include>*:jbossall-client:*</include>
              <include>*:mail:*</include>
              <include>*:smack:*</include> 
              <include>*:smackx:*</include>
              <include>*:aspectjrt:*</include>
              <include>*:javax.servlet:*</include>
              <include>*:Ice:*</include> 
            </includes>
            <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
            <outputDirectory>.</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
    </dependencySet>

    <dependencySet>
            <includes>
              <include>*:simmetrics_jar:*</include>
            </includes>
            <outputFileNameMapping>simmetrics_jar_v1_6_2_d07_02_07.${artifact.extension}</outputFileNameMapping>
            <outputDirectory>.</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
    </dependencySet>

    <dependencySet>
            <includes>
              <include>*:resteasy-jackson-provider:*</include>
            </includes>
            <outputFileNameMapping>${artifact.artifactId}-${artifact.version}.${artifact.extension}</outputFileNameMapping>
            <outputDirectory>.</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
    </dependencySet>

    <dependencySet>
            <includes>
              <include>*:java_memcached-release:*</include> 
            </includes>
            <outputFileNameMapping>${artifact.artifactId}_${artifact.version}.${artifact.extension}</outputFileNameMapping>
            <outputDirectory>.</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
    </dependencySet>

				
		<dependencySet>
			<includes>
				<include>com.projectgoth:Fusion*:*</include>
			</includes>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
			<outputDirectory>.</outputDirectory>
			<useProjectArtifact>true</useProjectArtifact>
		</dependencySet>


	</dependencySets>
</assembly> 
